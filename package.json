    "charts.css": "1.1.0",
    "dayjs": "1.11.10",
    "eslint-config-next": "13.5.6",
    "framer-motion": "10.16.4",
    "glider-js": "^1.7.7",
    "image-size": "1.0.2",
    "js-confetti": "0.11.0",
    "mermaid": "10.5.1",
    "motion": "10.16.4",
    "next": "13.5.6",
    "next-plausible": "3.11.2",
    "node-fetch": "3.3.2",
    "prism-react-renderer": "2.1.0",
